{
  "name": "dropdown-extension",
  "version": "1.0",
  "description": "An extension to drop img files from chrome to ios devices",
  "manifest_version": 2,
  "permissions": [
    "storage",
    "contextMenus"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
      "default_popup": "popup.html"
  }
}
